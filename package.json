{
  "name": "@slimio/nixfs",
  "version": "1.0.0",
  "description": "UNIX File System - NodeJS binding",
  "main": "index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "prepublishOnly": "pkg-ok",
    "prebuilds": "prebuildify --napi",
    "build": "cross-env node-gyp configure && node-gyp build",
    "test": "ava --verbose",
    "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
    "coverage": "nyc ava",
    "report": "nyc report --reporter=html"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 98,
    "statements": 98,
    "functions": 98,
    "branches": 90
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SlimIO/Nixfs.git"
  },
  "keywords": [],
  "author": "SlimIO",
  "license": "MIT",
  "gypfile": true,
  "bugs": {
    "url": "https://github.com/SlimIO/Nixfs/issues"
  },
  "homepage": "https://github.com/SlimIO/Nixfs#readme",
  "husky": {
    "hooks": {
      "pre-push": "cross-env npm test && eslint index.js",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "node-addon-api": "^1.6.2",
    "node-gyp-build": "^3.7.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.6.0",
    "@commitlint/config-conventional": "^7.6.0",
    "@escommunity/minami": "^1.0.0",
    "@slimio/eslint-config": "^2.0.4",
    "@slimio/is": "^1.4.0",
    "@types/node": "^10.12.18",
    "ava": "^1.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.12.0",
    "husky": "^1.3.1",
    "jsdoc": "^3.5.5",
    "node-gyp": "^3.8.0",
    "nyc": "^13.1.0",
    "pkg-ok": "^2.3.1",
    "prebuildify": "^2.10.0"
  }
}

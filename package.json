{
  "name": "@slimio/nixfs",
  "version": "1.0.0",
  "description": "UNIX File System - NodeJS binding",
  "main": "index.js",
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "prepublishOnly": "pkg-ok",
    "prebuilds": "prebuildify --napi",
    "build": "cross-env node-gyp configure && node-gyp build",
    "test": "ava --verbose",
    "doc": "jsdoc -c ./jsdoc.json -r -R ./README.md -P ./package.json --verbose",
    "coverage": "nyc npm test",
    "report": "nyc report --reporter=html"
  },
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 98,
    "statements": 98,
    "functions": 98,
    "branches": 90
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SlimIO/Nixfs.git"
  },
  "keywords": [
    "SlimIO",
    "filesystem",
    "fs",
    "disk",
    "stat",
    "binding",
    "napi"
  ],
  "files": [
    "index.js",
    "index.d.ts",
    "binding.gyp",
    "nixfs.cpp",
    "include/*.h"
  ],
  "author": "SlimIO",
  "license": "MIT",
  "gypfile": true,
  "bugs": {
    "url": "https://github.com/SlimIO/Nixfs/issues"
  },
  "homepage": "https://github.com/SlimIO/Nixfs#readme",
  "husky": {
    "hooks": {
      "pre-push": "cross-env npm test && eslint index.js",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {
    "node-addon-api": "^3.0.0",
    "node-gyp-build": "^4.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@escommunity/minami": "^1.0.0",
    "@slimio/eslint-config": "^4.1.0",
    "@slimio/is": "^1.5.0",
    "ava": "^3.8.2",
    "cross-env": "^7.0.2",
    "eslint": "^7.8.1",
    "husky": "^4.2.5",
    "jsdoc": "^3.6.4",
    "node-gyp": "^6.1.0",
    "nyc": "^15.0.1",
    "pkg-ok": "^2.3.1",
    "prebuildify": "^4.0.0"
  }
}
